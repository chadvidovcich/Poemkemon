<h3>Open Issues</h3>
<div class="row ">
    {{#each issues}}
        <div class="col s12 l4 xl2">
            <div class="card hoverable">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 150)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{{user.image}}}" alt="user image">
                        <a href="/issues/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/issues/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No issues to display</p>
    {{/each}}
</div>