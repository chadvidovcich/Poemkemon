<div class="row">
    <div class="col s12 m8">
        <h3>
            {{issue.title}}
            <small>{{{editIcon issue.user user issue._id false}}}</small>
        </h3>
        <div class="card issue">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'DD MMM YYYY, h:mma'}}</span>
                {{{issue.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{issue.user.displayName}}</span>
                <img src="{{issue.user.image}}" alt="user image" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/issues/user/{{issue.user._id}}">More From {{issue.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>